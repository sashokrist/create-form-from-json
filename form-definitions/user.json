{
    "action": "/forms/user",
    "table": "users",
    "fields": [
        {
            "name": "name",
            "label": "Full Name",
            "type": "text",
            "validation": "required|string|max:255"
        },
        {
            "name": "email",
            "label": "Email Address",
            "type": "email",
            "validation": "required|email|unique:users,email"
        },
        {
            "name": "password",
            "label": "Password",
            "type": "password",
            "validation": "required|string|min:8"
        }
    ]
}
